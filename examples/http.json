{
    "port": 9001,
    "resources": [{
        "path": "/list",
        "methods": [{
                "name": "Recurso teste GET",
				"type": "GET",
				"conversations": [{
					"response": {
                        "content-type": "application/json",
                        "body-path": "/tmp/some-backup.json",
                        "code": 200
                    }
				}]
            },
            {
                "name": "Recurso teste POST",
				"type": "POST",
				"conversations": [{
					"response": {
                        "content-type": "text/plain",
                        "body": "OK",
                    	"code": 201
                    }
				}]                
            }
        ]
    },{
		"path": "/list/{param}",
		"methods": [{
			"name": "Recurso teste GET com par√¢metro no path",
			"type": "GET",
			"conversations": [{
				"request": {
					"path-param": {
						"name": "param",
						"value": "legal"
					}
				},
				"response": {
					"content-type": "application/json",
					"body": "{\"msg\": \"legal\"}",
					"code": 200
				}
			},{
				"request": {
					"path-param": {
						"name": "param",
						"value": "foi"
					}
				},
				"response": {
					"content-type": "application/json",
					"body": "{\"msg\": \"foi\"}",
					"code": 200
				}
			}]
		}]
	},{
        "path": "/search",
        "methods": [{
                "name": "Recurso teste GET com query param",
				"type": "GET",
				"conversations": [{
					"request": {
						"query-param": [{
							"name": "num",
							"value": ["1"]
						}]
					},
					"response": {
                        "content-type": "application/json",
                        "body": "{\"conta\": \"1\"}",
                        "code": 200
                    }
				},{
					"request": {
						"query-param": [{
							"name": "num",
							"value": ["2"]
						}]
					},
					"response": {
						"content-type": "application/json",
						"body": "{\"conta\": \"2\"}",
						"code": 200
					}
				},{
					"request": {
						"query-param": [{
							"name": "num",
							"value": ["2"]
						},{
							"name": "plus",
							"value": ["2"]
						}]
					},
					"response": {
						"content-type": "application/json",
						"body": "{\"conta\": \"4\"}",
						"code": 200
					}
				}]
            }]
		}
    ]
    
}